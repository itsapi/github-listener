{
  "name": "github-listener",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/itsapi/github-listener.git"
  },
  "description": "A Node.js continuous deployment system for Github",
  "version": "2.2.0",
  "main": "index.js",
  "bin": {
    "github-listener": "./bin/github-listener"
  },
  "scripts": {
    "start": "./bin/github-listener",
    "test": "jshint . && tape test/*.js | tap-spec",
    "cover": "istanbul cover tape test/*.js",
    "travis": "npm run cover && codeclimate-test-reporter < ./coverage/lcov.info"
  },
  "pre-commit": "jshint .",
  "post-commit": "git status",
  "pre-push": "npm test",
  "post-merge": "npm install",
  "dependencies": {
    "ansi-to-html": "^0.3.0",
    "async-tools": "^1.2.0",
    "bl": "~1.0.0",
    "jade": "~1.11.0",
    "logging-tool": "~1.2.2",
    "minimist": "^1.1.2",
    "node-static": "^0.7.7",
    "socket.io": "~1.3.6",
    "string-format": "~0.5.0"
  },
  "devDependencies": {
    "codeclimate-test-reporter": "~0.1.0",
    "istanbul": "~0.3.17",
    "jshint": "~2.8.0",
    "pre-git": "^0.6.2",
    "tap-spec": "~4.0.2",
    "tape": "~4.0.1",
    "through2": "~2.0.0"
  },
  "bugs": {
    "url": "https://github.com/itsapi/github-listener/issues"
  },
  "homepage": "https://github.com/itsapi/github-listener",
  "directories": {
    "test": "test"
  },
  "contributors": [
    "Geraint White <mail@geraintwhite.co.uk>",
    "Oliver Faircliff <mail@oliverfaircliff.com>"
  ],
  "license": "GPL-2.0",
  "author": "Dvbris <mail@dvbris.com>"
}
