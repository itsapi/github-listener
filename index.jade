doctype html
html
  head
    title= (current.status || 'Ready') + ' - Git'

    link(href='//cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css', rel='stylesheet')
    link(href='main.css', rel='stylesheet')
    script(src='socket.io/socket.io.js')
    script(src='main.js')
  body
    ul.list
      each build in builds
        li(id=build.id)
          span.slug= build.data.slug
          span.commit= build.data.commit
          span.branch= build.data.branch

    pre.log!= current.log
